{
  "name": "koa-app",
  "version": "0.0.1",
  "description": "Koa app template",
  "private": true,
  "main": "app.js",
  "scripts": {
    "restart": "touch ./tmp/restart.txt",
    "service": "docker-compose up -d",
    "service:down": "docker-compose down",
    "service:down:all": "docker-compose down --rmi all",
    "service:rebuild": "docker-compose up --build -d",
    "service:recreate": "docker-compose up --force-recreate -d",
    "service:restart": "docker-compose restart",
    "service:stop": "docker-compose stop",
    "test": "node ./app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiewulong/koa-app.git"
  },
  "keywords": [
    "koa",
    "app",
    "template"
  ],
  "author": "xiewulong <xiewulong@vip.qq.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xiewulong/koa-app/issues"
  },
  "homepage": "https://github.com/xiewulong/koa-app#readme",
  "dependencies": {
    "js-yaml": "^3.10.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-captcha-v2": "^0.0.7",
    "koa-csrf": "^3.0.6",
    "koa-devise": "^0.0.6",
    "koa-flash": "^1.0.0",
    "koa-i18n": "^2.1.0",
    "koa-locale": "^1.3.0",
    "koa-mailer-v2": "^0.0.3",
    "koa-mongo": "^1.3.0",
    "koa-mongo-bucket": "^0.0.4",
    "koa-multer": "^1.0.2",
    "koa-pug": "^3.0.0-2",
    "koa-rbac": "^2.0.1",
    "koa-redis": "^3.1.1",
    "koa-router": "^7.3.0",
    "koa-session": "^5.5.1",
    "koa-static": "^4.0.2",
    "log4js": "2.3.12",
    "mongodb": "^3.0.1"
  }
}
